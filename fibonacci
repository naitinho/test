#include <stdio.h>

int main(void) {
  int termo1 = 0; 
  int termo2 = 1;
  int termo3 = 0;
  int valor;

printf("Digite um número:\n ");
  scanf("%d", &valor);
  
while (valor > termo3){
termo3 = termo1 + termo2;
termo1 = termo2;
termo2 = termo3;
  }
if (valor == 0 || valor == 1){
    printf("O número faz parte da sequência de Fibonacci.");
      }
else if(valor == termo3){
      printf("O número faz parte da sequência de Fibonacci.");
        }
else{
      printf("O número digitado não faz parte da sequência de Fibonacci.");
  }
  return 0;
}
